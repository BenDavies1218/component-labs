{
  "name": "@component-labs/react-showcase",
  "version": "0.5.0",
  "description": "A lightweight component showcase tool for React components",
  "type": "module",
  "bin": {
    "component-showcase": "./dist/cli/index.js",
    "showcase": "./dist/cli/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./config": {
      "types": "./dist/config/schema.d.ts",
      "import": "./dist/config/schema.js"
    }
  },
  "files": [
    "dist",
    "src",
    "index.html",
    "templates",
    "README.md"
  ],
  "scripts": {
    "dev": "node ./dist/cli/index.js dev",
    "build": "tsc && vite build",
    "build:cli": "tsc --project tsconfig.cli.json",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "pnpm run build:cli"
  },
  "keywords": [
    "react",
    "components",
    "showcase",
    "storybook-alternative",
    "component-library",
    "ui",
    "vite"
  ],
  "author": "Benjamin Davies",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/benjamindavies/component-labs",
    "directory": "apps/showcase"
  },
  "homepage": "https://github.com/benjamindavies/component-labs#readme",
  "bugs": {
    "url": "https://github.com/benjamindavies/component-labs/issues"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "commander": "^14.0.2",
    "fast-glob": "^3.3.3",
    "glob": "^13.0.0",
    "lucide-react": "0.562.0",
    "picocolors": "^1.1.1",
    "tailwind-merge": "3.4.0",
    "tailwindcss": "^4.0.0",
    "tailwindcss-animate": "1.0.7",
    "zod": "^4.3.5"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "vite": ">=5.0.0"
  },
  "devDependencies": {
    "@component_labs/react-showcase": "^0.3.0",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.11.5",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitest/ui": "^1.2.1",
    "jsdom": "^23.2.0",
    "postcss": "8.5.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^1.2.1"
  }
}
