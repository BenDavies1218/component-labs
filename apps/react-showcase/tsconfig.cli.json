{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": ["ES2022"],
    "skipLibCheck": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": false,
    "types": ["node"]
  },
  "include": [
    "src/cli/**/*",
    "src/config/**/*",
    "src/utils/**/*",
    "src/index.ts",
    "src/showcase.ts",
    "src/vite-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/App.tsx",
    "src/main.tsx",
    "src/components/**/*"
  ]
}
