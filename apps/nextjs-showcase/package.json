{
  "name": "@component-labs/nextjs-showcase",
  "version": "0.1.0",
  "description": "A lightweight component showcase tool for Next.js with SSR support",
  "type": "module",
  "bin": {
    "nextjs-showcase": "./dist/cli/index.js",
    "showcase-next": "./dist/cli/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./config": {
      "types": "./dist/config/schema.d.ts",
      "import": "./dist/config/schema.js"
    }
  },
  "files": [
    "dist",
    "src",
    "app",
    "templates",
    "README.md"
  ],
  "scripts": {
    "dev": "node ./dist/cli/index.js dev",
    "build": "tsc && next build",
    "build:cli": "tsc --project tsconfig.cli.json",
    "preview": "next start",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "pnpm run build:cli"
  },
  "keywords": [
    "nextjs",
    "react",
    "components",
    "showcase",
    "ssr",
    "server-side-rendering",
    "component-library",
    "ui",
    "documentation"
  ],
  "author": "Benjamin Davies",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/BenDavies1218/component-labs",
    "directory": "apps/nextjs-showcase"
  },
  "homepage": "https://github.com/BenDavies1218/component-labs#readme",
  "bugs": {
    "url": "https://github.com/BenDavies1218/component-labs/issues"
  },
  "dependencies": {
    "@component-labs/showcase-ui": "workspace:*",
    "@tailwindcss/postcss": "^4.1.9",
    "commander": "^14.0.2",
    "fast-glob": "^3.3.3",
    "glob": "^13.0.0",
    "lucide-react": "0.562.0",
    "next": "16.0.10",
    "picocolors": "^1.1.1",
    "tailwindcss": "^4.1.9",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.3.5"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/ui": "^1.2.1",
    "jsdom": "^23.2.0",
    "postcss": "8.5.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  }
}
