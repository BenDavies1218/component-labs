{
  "name": "@component-labs/cli",
  "version": "0.1.0",
  "description": "CLI for installing Component Labs components",
  "type": "module",
  "bin": {
    "componentlabs": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "scripts"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --minify --clean",
    "dev": "tsup src/index.ts --format esm --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "node scripts/check-workspace-deps.js && pnpm build",
    "publish:otp": "../../scripts/publish-with-otp.sh"
  },
  "keywords": [
    "component-labs",
    "cli",
    "components",
    "ui",
    "shadcn",
    "tailwind"
  ],
  "author": "Benjamin Davies",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/BenDavies1218/component-labs",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/BenDavies1218/component-labs#readme",
  "bugs": {
    "url": "https://github.com/BenDavies1218/component-labs/issues"
  },
  "dependencies": {
    "@component-labs/registry": "^0.1.0",
    "commander": "^11.1.0",
    "picocolors": "^1.0.0",
    "prompts": "^2.4.2",
    "ora": "^8.0.1",
    "execa": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/prompts": "^2.4.9",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
