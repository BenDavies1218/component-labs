{
  "name": "@component-labs/ui",
  "version": "0.0.2",
  "description": "React UI component library with Ariakit and Tailwind CSS",
  "type": "module",
  "keywords": [
    "react",
    "components",
    "ui",
    "ariakit",
    "tailwind",
    "tailwindcss",
    "accessible",
    "component-library"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/component-labs/ui.git",
    "directory": "packages/ui"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    "./base": "./src/styles/base.css",
    "./button": {
      "import": "./dist/button.js",
      "types": "./dist/button.d.ts"
    },
    "./checkbox": {
      "import": "./dist/checkbox.js",
      "types": "./dist/checkbox.d.ts"
    },
    "./combobox": {
      "import": "./dist/combobox.js",
      "types": "./dist/combobox.d.ts"
    },
    "./data-table": {
      "import": "./dist/data-table.js",
      "types": "./dist/data-table.d.ts"
    },
    "./dialog": {
      "import": "./dist/dialog.js",
      "types": "./dist/dialog.d.ts"
    },
    "./input": {
      "import": "./dist/input.js",
      "types": "./dist/input.d.ts"
    },
    "./menu": {
      "import": "./dist/menu.js",
      "types": "./dist/menu.d.ts"
    },
    "./switch": {
      "import": "./dist/switch.js",
      "types": "./dist/switch.d.ts"
    }
  },
  "files": [
    "dist",
    "src/styles"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "dev": "vite build --watch",
    "lint": "eslint src --ext ts,tsx",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "dependencies": {
    "@ariakit/react": "^0.4.1",
    "@tailwindcss/vite": "^4.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "0.562.0",
    "tailwind-merge": "3.4.0"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "lightningcss": "^1.28.2",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-dts": "^3.7.1"
  }
}
